<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<StackPane xmlns="http://javafx.com/javafx/18"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="engineer.gui.javafx.menu.MenuGui"
           fx:id="root">
   <ImageView fitHeight="720.0" fitWidth="1080.0" pickOnBounds="true" preserveRatio="true">
      <Image url="@../images/menu/background.png" />
   </ImageView>
   <VBox alignment="CENTER" spacing="5.0">
      <Button prefHeight="50.0" prefWidth="200.0" text="New Game" onAction="#startGame">
         <font>
            <Font size="20.0"/>
         </font>
      </Button>
      <Button prefHeight="50.0" prefWidth="200.0" text="Exit" onAction="#exitGame">
         <font>
            <Font size="20.0"/>
         </font>
      </Button>
   </VBox>
</StackPane>
