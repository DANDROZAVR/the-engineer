<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<StackPane xmlns="http://javafx.com/javafx/18"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="engineer.gui.javafx.menu.MenuGui"
           fx:id="root">
   <ImageView fitHeight="720.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="true">
      <Image url="@../images/menu/background.png" />
   </ImageView>
   <VBox alignment="CENTER" spacing="5.0">
      <Button prefHeight="50.0" prefWidth="200.0" text="New Game" onAction="#startGame"
              style="-fx-font-size: 1.5em;" />
      <Button prefHeight="50.0" prefWidth="200.0" text="Exit" onAction="#exitGame"
              style="-fx-font-size: 1.5em;" />
   </VBox>
</StackPane>
